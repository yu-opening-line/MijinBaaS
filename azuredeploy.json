{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "2nd_location": {
        "defaultValue": "Japan East",
        "type": "String"
    },
    "3rd_location": {
        "defaultValue": "West US",
        "type": "String"
    },
    "4th_location": {
        "defaultValue": "West Europe",
        "type": "String"
    },
    "mijin_vm_prefix": {
        "defaultValue": "",
        "type": "String"
    },
    "add_itional_local_IPs": {
        "defaultValue": "",
        "type": "String"
    }
  },
  "variables": {
    "location0": "[resourceGroup().location]",
    "location1": "[parameters('2nd_location')]",
    "location2": "[parameters('3rd_location')]",
    "location3": "[parameters('4th_location')]"
  },
  "resources": [
    {
      "name": "[concat('mijindeploy', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://hitachimijin3diag972.blob.core.windows.net/scripts/vmdeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables(concat('location', copyIndex()))]"
          },
          "mijin_vm_prefix": {
              "value": "[parameters('mijin_vm_prefix')]"
          },
          "mijin_vm_number": {
              "value": "[copyIndex()]"
          }
        }
      },
      "copy": {
        "name"  : "mijin_deploy_copy",
        "count" : 4
      }
    }
  ],
  "outputs": {
    "result": {
      "type": "string",
      "value": "[reference('mijindeploy').outputs.result.value]"
    }
  }
}
