{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

    "templateBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL for Marketplace",
        "artifactsBaseUrl": ""
      },
      "defaultValue": "https://raw.githubusercontent.com/cloudbees/azure-arm-template/master"
    },
    "adminUsername": {
      "type": "String",
      "metadata": {
        "description": "Administrative username for the virtual machines."
      }
    },
    "authenticationType": {
      "type": "string",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ]
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH RSA public key file as a string. Not used if authenticationType of password."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A3",
      "metadata": {
        "description": "Size for the Virtual Machine."
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "2nd_location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "3rd_location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "4th_location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "5th_location": {
      "type": "string",
      "metadata": {
        "description": "The location where the solution will be deployed."
      }
    },
    "mijin_vm_prefix": {
      "type": "String",
      "metadata": {
        "description": "Specify the server name prefix. Valid only lowercase letters(a-z)."
      }
    },
    "issue_account_local_IPs": {
      "type": "String",
      "metadata": {
        "description": "Set the Local IP Address to issue the Mijin Account. For more than one, enter with pipe break. (XX.XX.XX.XX | XX.XX.XX.XX)"
      }
    }
  },
  "variables": {
    "MIJIN_INSTALLER_URL" : "https://raw.githubusercontent.com/yu000/MijinBaaS/master/mijin.0.6.93.tar.gz",
    "VM_DEPLOY_JSON_URL": "https://raw.githubusercontent.com/yu000/MijinBaaS/master/vmdeploy.json",
    "MIJIN_INSTALL_SH_URL": "https://raw.githubusercontent.com/yu000/MijinBaaS/master/install_mijin.sh",
    "location0": "[parameters('location')]",
    "location1": "[parameters('2nd_location')]",
    "location2": "[parameters('3rd_location')]",
    "location3": "[parameters('4th_location')]",
    "location4": "[parameters('5th_location')]",
    "base_vm_name": "[concat(parameters('mijin_vm_prefix'),'-mijin-vm')]"
  },
  "resources": [
    {
      "name": "[concat('mijindeploy', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('VM_DEPLOY_JSON_URL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables(concat('location', copyIndex()))]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "authenticationType": {
            "value": "[parameters('authenticationType')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshPublicKey": {
            "value": "[parameters('sshPublicKey')]"
          },
          "mijin_vm_prefix": {
            "value": "[parameters('mijin_vm_prefix')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "mijin_vm_number": {
              "value": "[copyIndex()]"
          }
        }
      },
      "copy": {
        "name"  : "vm_deploy_copy",
        "count" : 5
      }
    },
    {
      "comments": "CustomScriptForLinux:install_mijin.sh",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('base_vm_name'), copyIndex(), '/extension')]",
      "apiVersion": "2017-12-01",
      "location": "[variables(concat('location', copyIndex()))]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[variables('MIJIN_INSTALL_SH_URL')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute":
            "[concat(
              'sh install_mijin.sh',
              ' ',
              parameters('issue_account_local_IPs'),
              ' ',
              reference('mijindeploy0').outputs.ret_publicIPAddress.value,
              ' ',
              reference('mijindeploy1').outputs.ret_publicIPAddress.value,
              ' ',
              reference('mijindeploy2').outputs.ret_publicIPAddress.value,
              ' ',
              reference('mijindeploy3').outputs.ret_publicIPAddress.value,
              ' ',
              reference('mijindeploy4').outputs.ret_publicIPAddress.value,
              ' \"',
              variables('MIJIN_INSTALLER_URL'),
              '\" ',
              parameters('adminUsername'),
              ' \"',
              copyIndex(),
              '\"'
            )]"
        }
      },
      "copy": {
        "name"  : "mijin_install_copy",
        "count" : 5
      }
    }
  ],
  "outputs": {
  }
}
