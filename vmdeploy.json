{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adminPassword": {
      "type": "string"
    },
    "mijin_vm_prefix": {
      "type": "string"
    },
    "mijin_vm_number": {
      "type": "int"
    },
    "mijin_vhd_url": {
      "type": "string"
    }
  },
  "variables": {
    "virtualMachines_name"          : "[concat(parameters('mijin_vm_prefix'),'-mijin-vm', parameters('mijin_vm_number'))]",
    "networkInterfaces_name"        : "[concat(variables('virtualMachines_name'), '-netifs')]",
    "networkSecurityGroups_nsg_name": "[concat(variables('virtualMachines_name'), '-nsg')]",
    "publicIPAddresses_ip_name"     : "[concat(variables('virtualMachines_name'), '-ip')]",
    "virtualNetworks_vnet_name"     : "[concat(variables('virtualMachines_name'), '-vnet')]",
    "storageAccounts_diag_name"     : "[concat(parameters('mijin_vm_prefix'),'mijinvm', parameters('mijin_vm_number'), 'diag')]",
    "storageAccounts_disks_name"    : "[concat(parameters('mijin_vm_prefix'),'mijinvm', parameters('mijin_vm_number'), 'disks')]"
  },
  "resources": [
    {
        "comments": "mijin virtualMachines",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('virtualMachines_name')]",
        "apiVersion": "2017-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_A3"
            },
            "storageProfile": {
                "osDisk": {
                    "osType": "Linux",
                    "name": "[variables('virtualMachines_name')]",
                    "createOption": "FromImage",
                    "image": {
                      "uri": "[parameters('mijin_vhd_url')]"
                    }
                    "vhd": {
                        "uri": "[concat('https', '://', variables('storageAccounts_disks_name'), '.blob.core.windows.net', concat('/vhds/', variables('virtualMachines_name'),'.vhd'))]"
                    },
                    "caching": "ReadWrite"
                },
                "dataDisks": []
            },
            "osProfile": {
                "computerName" : "[variables('virtualMachines_name')]",
                "adminUsername": "mijin",
                "adminPassword": "[parameters('adminPassword')]",
                "secrets": []
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaces_name'))]"
                    }
                ]
            },
            "diagnosticsProfile": {
                "bootDiagnostics": {
                    "enabled": true,
                    "storageUri": "[concat('https', '://', variables('storageAccounts_diag_name'), '.blob.core.windows.net', '/')]"
                }
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_disks_name'))]",
            "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaces_name'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_diag_name'))]"
        ]
    },
    {
        "comments": "mijin networkInterfaces",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('networkInterfaces_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAddress": "10.9.3.4",
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddresses_ip_name'))]"
                        },
                        "subnet": {
                            "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks_vnet_name')), '/subnets/default')]"
                        }
                    }
                }
            ],
            "dnsSettings": {
                "dnsServers": []
            },
            "enableIPForwarding": false,
            "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroups_nsg_name'))]"
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddresses_ip_name'))]",
            "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks_vnet_name'))]",
            "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroups_nsg_name'))]"
        ]
    },
    {
        "comments": "mijin networkSecurityGroups",
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('networkSecurityGroups_nsg_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "securityRules": [
                {
                    "name": "default-allow-ssh",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1000,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "mijin5",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "7778",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1010,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "mijin6",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "7895",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1020,
                        "direction": "Inbound"
                    }
                }
            ]
        },
        "dependsOn": []
    },
    {
        "comments": "mijin putlicIPAddresses",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddresses_ip_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Static",
            "idleTimeoutInMinutes": 4
        },
        "dependsOn": []
    },
    {
        "comments": "mijin virtualNetworks",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[variables('virtualNetworks_vnet_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.9.3.0/24"
                ]
            },
            "subnets": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.9.3.0/24"
                    }
                }
            ]
        },
        "dependsOn": []
    },
    {
        "comments": "mijin storageAccounts",
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "kind": "Storage",
        "name": "[variables('storageAccounts_diag_name')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "tags": {},
        "properties": {},
        "dependsOn": []
    },
    {
        "comments": "mijin storageAccounts",
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "kind": "Storage",
        "name": "[variables('storageAccounts_disks_name')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "tags": {},
        "properties": {},
        "dependsOn": []
    }
  ],
  "outputs": {
    "ret_publicIPAddress" : {
      "type"  : "string",
      "value" : "[reference(variables('publicIPAddresses_ip_name')).ipAddress]"
    }
  }
}
