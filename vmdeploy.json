{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "authenticationType": {
      "type": "string",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ]
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sshPublicKey": {
      "type": "string"
    },
    "mijin_vm_prefix": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "mijin_vm_number": {
      "type": "int"
    }
  },
  "variables": {
    "virtualMachines_name"          : "[concat(parameters('mijin_vm_prefix'),'-mijin-vm', parameters('mijin_vm_number'))]",
    "networkInterfaces_name"        : "[concat(variables('virtualMachines_name'), '-netifs')]",
    "networkSecurityGroups_nsg_name": "[concat(variables('virtualMachines_name'), '-nsg')]",
    "publicIPAddresses_ip_name"     : "[concat(variables('virtualMachines_name'), '-ip')]",
    "virtualNetworks_vnet_name"     : "[concat(variables('virtualMachines_name'), '-vnet')]",
    "storageAccounts_diag_name"     : "[concat(uniquestring(subscription().subscriptionId, resourceGroup().id), 'diag', parameters('mijin_vm_number'))]",
    "storageAccounts_disks_name"    : "[concat(uniquestring(subscription().subscriptionId, resourceGroup().id), 'disks', parameters('mijin_vm_number'))]",

    "sshKeyPath": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
    "linuxConfiguration_sshPublicKey": {
      "disablePasswordAuthentication": "true",
      "ssh": {
        "publicKeys": [
          {
            "path": "[variables('sshKeyPath')]",
            "keyData": "[parameters('sshPublicKey')]"
          }
        ]
      }
    },
    "linuxConfiguration_password": {},
    "linuxConfiguration": "[variables(concat('linuxConfiguration_', parameters('authenticationType')))]"

  },
  "resources": [
    {
        "comments": "mijin virtualMachines",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('virtualMachines_name')]",
        "apiVersion": "2017-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "hardwareProfile": {
                "vmSize": "[parameters('vmSize')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "baas-techbureau",
                    "offer": "b1327623-d29b-4cc1-b833-85067dcc7bce",
                    "sku": "mijin_baas_vhd",
                    "version": "1.0.3"
                },
                "osDisk": {
                    "osType": "Linux",
                    "name": "[variables('virtualMachines_name')]",
                    "createOption": "FromImage",
                    "vhd": {
                        "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccounts_disks_name'))).primaryEndpoints.blob , 'vhds/', variables('virtualMachines_name'),'.vhd')]"
                    },
                    "caching": "ReadWrite"
                },
                "dataDisks": []
            },
            "osProfile": {
                "computerName" : "[variables('virtualMachines_name')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]",
                "linuxConfiguration": "[variables('linuxConfiguration')]",
                "secrets": []
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaces_name'))]"
                    }
                ]
            },
            "diagnosticsProfile": {
                "bootDiagnostics": {
                    "enabled": true,
                    "storageUri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccounts_diag_name'))).primaryEndpoints.blob)]"
                }
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_disks_name'))]",
            "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaces_name'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts_diag_name'))]"
        ]
    },
    {
        "comments": "mijin networkInterfaces",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('networkInterfaces_name')]",
        "apiVersion": "2017-08-01",
        "location": "[parameters('location')]",
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAddress": "10.9.3.4",
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddresses_ip_name'))]"
                        },
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', variables('virtualNetworks_vnet_name'), 'default')]"
                        }
                    }
                }
            ],
            "dnsSettings": {
                "dnsServers": []
            },
            "enableIPForwarding": false,
            "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroups_nsg_name'))]"
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddresses_ip_name'))]",
            "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks_vnet_name'))]",
            "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroups_nsg_name'))]"
        ]
    },
    {
        "comments": "mijin networkSecurityGroups",
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('networkSecurityGroups_nsg_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "securityRules": [
                {
                    "name": "default-allow-ssh",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1000,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "mijin_port_7778",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "7778",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1010,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "mijin_port_7895",
                    "properties": {
                        "protocol": "TCP",
                        "sourcePortRange": "*",
                        "destinationPortRange": "7895",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 1020,
                        "direction": "Inbound"
                    }
                }
            ]
        },
        "dependsOn": []
    },
    {
        "comments": "mijin putlicIPAddresses",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddresses_ip_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Static",
            "idleTimeoutInMinutes": 4
        },
        "dependsOn": []
    },
    {
        "comments": "mijin virtualNetworks",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[variables('virtualNetworks_vnet_name')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.9.3.0/24"
                ]
            },
            "subnets": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.9.3.0/24"
                    }
                }
            ]
        },
        "dependsOn": []
    },
    {
        "comments": "mijin storageAccounts",
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "kind": "Storage",
        "name": "[variables('storageAccounts_diag_name')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "tags": {},
        "properties": {},
        "dependsOn": []
    },
    {
        "comments": "mijin storageAccounts",
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "kind": "Storage",
        "name": "[variables('storageAccounts_disks_name')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "tags": {},
        "properties": {},
        "dependsOn": []
    }
  ],
  "outputs": {
    "ret_publicIPAddress" : {
      "type"  : "string",
      "value" : "[reference(variables('publicIPAddresses_ip_name')).ipAddress]"
    }
  }
}
